@model List<Product>

<div class="card shadow boarder-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row pt-4 pb-3">
       
            <div class="col-12 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>
    

        <div style="overflow-x:auto">
            <table class="table table-bordered table-striped">
                <thead role="rowgroup">
                    <tr role="row">
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>UPCode</th>
                        <th>Manufacturer</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th></th>
                   
                    </tr>
                </thead>
                <tbody role="rowgroup">
                    @foreach(var obj in Model)
                    { //assending display order
                    <tr role="row">
                        <td data-label="Product Name">@obj.Title</td>
                        <td data-label="Description">@obj.Description</td>
                        <td data-label="UPCode">@obj.UPCode.</td>
                        <td data-label="Manufacturer">@obj.Manufacturer</td>
                        <td data-label="Price">@obj.ListPrice</td>
                        <td data-label="Category">@obj.Category.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>