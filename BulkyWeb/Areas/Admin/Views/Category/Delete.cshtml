@model Category
<div class="card shadow boarder-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>

<form method="post">
    @*<input asp-for="Id" hidden />*@       @*because the name is "Id" primary key, so this line of code doesnot needed*@
    <div class="border p-3 mt-4">
        
        <div class="mb-3 row">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    @*<div asp-validation-summary="ModelOnly">Creation Failed: </div>*@

</form>
</div>
